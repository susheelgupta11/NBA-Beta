	<script>
$('ul.expandible').each(function(){
    var lis = $(this).find('li:gt(1)');
    if(!$(this).hasClass('expanded')) {
        lis.hide();
    } else {
        lis.show();
    }
    
    if(lis.length>0){
        $(this).append($('<li class="expand"><span style="color: #F60; cursor:pointer;">Read More</span></li>').click(function(event){
            var $expandible = $(this).parents('.expandible');
            $expandible.toggleClass('expanded');
            if ( !$expandible.hasClass('expanded')) {
                $(this).html("<span style='color: #F60; cursor:pointer;'>Read More</span></li>");
            } else {
                $(this).html("<span style='color: #F60; cursor:pointer;'>Read Less</span></li>");
            };
            lis.toggle();
            event.preventDefault();
        }));
    }
});
</script>


